<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        tools:context=".Workout">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="124dp"
        android:layout_marginTop="4dp"
        android:text="Workout Page"
        android:textSize="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/Walkingbtn"
        android:layout_width="357dp"
        android:layout_height="107dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/walking"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <ImageButton
        android:id="@+id/BikingBtn"
        android:layout_width="351dp"
        android:layout_height="124dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="380dp"
        android:src="@drawable/lsvt"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/LSVTBtn"
        android:layout_width="362dp"
        android:layout_height="89dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="588dp"
        android:src="@drawable/resting"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/RestingBtn"
        android:layout_width="263dp"
        android:layout_height="139dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="208dp"
        android:src="@drawable/biking2"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
